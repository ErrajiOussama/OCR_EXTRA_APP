<Window x:Class="OCR_EXTRA_APP.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OCR_EXTRA_APP"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="Login" Height="200" Width="600">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Le titre de l'application -->
        <Image Source="\icons\logo.png" Width="200"></Image>
        <StackPanel Margin="50" Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
        <!-- Partie de saisie de l'Email -->
            <TextBox x:Name="UserName" Margin="10"/>
        <!-- Partie de saisie du Paasword -->
            <PasswordBox Grid.Row="1"  Margin="10" KeyUp="Password_KeyUp" x:Name="Password"/>
        
            </Grid>
        </StackPanel>
        
    </Grid>
</Window>
