<Window x:Class="OCR_EXTRA_APP.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OCR_EXTRA_APP"
        mc:Ignorable="d"
        Title="Login" Height="550" Width="400">
    <StackPanel Margin="20 20 20 20">
        <!-- Le titre de l'application -->
        <TextBlock  FontSize="36" Text="BIENVENUE" HorizontalAlignment="Center" Margin="0 0 0 0"/>
        <!-- Partie de saisie de l'Email -->
        <Grid Margin="0 50 0 10">
            <TextBlock Text="UserName"  Margin="40 50 0 0 "/>
            <TextBox x:Name="UserName" Width="200" Padding="3" Margin="100 50 0 0 "/>
        </Grid>
        <!-- Partie de saisie du Paasword -->
        <Grid Margin="0 10 0 10">
            <TextBlock Text="Password" Margin="45 20 0 0 "/>
            <PasswordBox KeyUp="Password_KeyUp" x:Name="Password" Width="200" Padding="3" Margin="100 20 0 0 "/>
        </Grid>
        <StackPanel Margin="0 50 0 0 ">

            <Button  x:Name="Login1" Click="Login1_Click" Content="Login" BorderBrush="{x:Null}" Margin="100 0 100 0"/>

        </StackPanel>
    </StackPanel>
</Window>
